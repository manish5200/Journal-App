<configuration>    <appender name="myConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">        <encoder>            <pattern>                %d{HH:mm:ss SSS} [%thread] %-10level %logger{36} -----> %msg%n            </pattern>        </encoder>    </appender>    <appender name="myFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">        <file>logs/journalApp.log</file>        <encoder>            <pattern>                %d{HH:mm:ss SSS} [%thread] %-10level %logger{36} -----> %msg%n            </pattern>        </encoder>        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">            <fileNamePattern>logs/archived/JournalApp-%d{yyyy-MM-dd_HH-mm}.%i.log</fileNamePattern>            <maxFileSize>10MB</maxFileSize>            <maxHistory>10</maxHistory>            <totalSizeCap>1GB</totalSizeCap>        </rollingPolicy>    </appender>    <root level="INFO">        <appender-ref ref="myConsoleAppender"/>        <appender-ref ref="myFileAppender"/>    </root></configuration>